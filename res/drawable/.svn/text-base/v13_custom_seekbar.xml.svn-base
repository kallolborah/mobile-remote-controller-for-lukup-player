<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <size
                android:height="2dip"
                android:width="4dip" />

            <gradient
                android:angle="270"
                android:centerColor="#000000"
                android:centerY="1"
                android:endColor="#000000"
                android:startColor="#000000" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <size
                    android:height="2dip"
                    android:width="4dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#000000"
                    android:centerY="1"
                    android:endColor="#000000"
                    android:startColor="#000000" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <size
                    android:height="2dip"
                    android:width="4dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#000000"
                    android:endColor="#000000"
                    android:startColor="#000000" />
            </shape>
        </clip>
    </item>

</layer-list>
