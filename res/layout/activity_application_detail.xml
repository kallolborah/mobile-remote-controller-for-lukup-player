<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/playlist" >

    <ImageView
        android:id="@+id/detail_application_image"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:background="@color/white" />

    <TextView
        android:id="@+id/detail_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detain_company"
        android:layout_below="@+id/detain_company"
        android:text="Category"
         android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ListView
        android:id="@+id/Detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dip"
        android:layout_below="@+id/detail_application_image" >

    </ListView>

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	android:layout_marginLeft="75dip"
        android:layout_marginTop="15dip"
        android:text="Application Title"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detain_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detail_title"
        android:layout_below="@+id/detail_title"
        android:layout_marginTop="14dp"
        android:text="company Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

</RelativeLayout>