<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/playlist" >

    <RelativeLayout
        android:id="@+id/info_layback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:src="@drawable/defaultimage" />

        <RelativeLayout
            android:id="@+id/infoRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/imageView" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Movie Name"
                android:textColor="#ffffff"
                android:textSize="18dip" />
            
            <TextView
                android:id="@+id/chl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_below="@+id/title"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chl"
                android:maxLines="3"
                android:text="Channel Name"
                android:textColor="#ffffff"
                android:textSize="14dip" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" 
        android:layout_marginBottom="64dip" 
        android:layout_below="@+id/info_layback" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

             <TextView
			    android:id="@+id/heading1"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:text="Actors: "
			    android:textStyle="bold"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />
             
		    <TextView
			    android:id="@+id/description1"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:maxLines="3"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />
		    
		    <TextView
			    android:id="@+id/heading6"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:text="Duration: "
			    android:textStyle="bold"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />
             
		    <TextView
			    android:id="@+id/description6"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:maxLines="1"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />

            <TextView
			    android:id="@+id/heading2"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:text="Producer: "
			    android:layout_marginTop="10dp"
			    android:textStyle="bold"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />
             
		    <TextView
			    android:id="@+id/description2"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:maxLines="3"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />

            <TextView
			    android:id="@+id/heading3"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:text="Director: "
			    android:layout_marginTop="10dp"
			    android:textStyle="bold"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />
             
		    <TextView
			    android:id="@+id/description3"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:maxLines="3"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />

            <TextView
			    android:id="@+id/heading4"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:text="Musicdirector: "
			    android:layout_marginTop="10dp"
			    android:textStyle="bold"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />
             
		    <TextView
			    android:id="@+id/description4"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:maxLines="3"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />

           <TextView
			    android:id="@+id/heading5"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:text="Description: "
			    android:layout_marginTop="10dp"
			    android:textStyle="bold"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />
             
		    <TextView
			    android:id="@+id/description5"
			    android:textColor="#ffffff"
			    android:textSize="14dip"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content" />
		    
        </LinearLayout>
    </ScrollView>
